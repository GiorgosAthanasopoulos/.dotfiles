# open terminal
super + {t, T}
	alacritty

# open browser
super + {b, B}
	firefox

# open file manager
super + {f, F}
	thunar

# close focused window
super + {q, Q}
	bspc node -{c,k}

# open rofi
super + @space
	rofi -show-icons -show drun -modi drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q, Q, r, R}
	bspc {quit, quit, wm -r, wm -r}

# set node to fullscreen
super + alt + {f, F}
	bspc node -t {fullscreen}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
